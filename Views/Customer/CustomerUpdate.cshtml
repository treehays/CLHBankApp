@model CLHBankApp.Dto.CustomerDTO;

@{
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card">
                    <h2 class="card-title text-center">Register <a href="http://opensnippets.com">open snippets</a></h2>
                    <div class="card-body py-md-4">
                        <form _lpchecked="1" asp-action="CustomerUpdate" enctype="multipart/form-data">

                            <div class="form-group mb-3">
                                <input type="text" class="form-control" id="name" name="FirstName" placeholder="FirstName" asp-for="@Model.FirstName">
                            </div>
                            <div class="form-group mb-3">
                                <input type="text" class="form-control" id="LastName"
                                       placeholder="LastName" name="LastName" asp-for="@Model.LastName">
                            </div>
                            <div class="form-group mb-3">
                                <input type="tel" class="form-control" id="PhoneNumber"
                                       placeholder="Phone" name="PhoneNumber" asp-for="@Model.PhoneNumber">
                            </div>
                            <div class="d-flex flex-row align-items-center justify-content-between">
                               
                                <button class="btn btn-primary">Update Account</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
